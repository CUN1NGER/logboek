{% extends 'base.html.twig' %}

{% block title %}Log index{% endblock %}

{% block body %}
    <h1>Log index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CoverLetter</th>
                <th>Date</th>
                <th>Driver</th>
                <th>TruckID</th>
                <th>Size</th>
                <th>Location</th>
                <th>TimeLeaving</th>
                <th>EventLocation</th>
                <th>EventName</th>
                <th>UserID</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.id }}</td>
                <td>{{ log.CoverLetter }}</td>
                <td>{{ log.Date ? log.Date|date('Y-m-d') : '' }}</td>
                <td>{{ log.Driver }}</td>
                <td>{{ log.TruckID }}</td>
                <td>{{ log.Size }}</td>
                <td>{{ log.Location }}</td>
                <td>{{ log.TimeLeaving ? log.TimeLeaving|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ log.EventLocation }}</td>
                <td>{{ log.EventName }}</td>
                <td>{{ log.UserID }}</td>
                <td>
                    <a href="{{ path('log_show', {'id': log.id}) }}">show</a>
                    <a href="{{ path('log_edit', {'id': log.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('log_new') }}">Create new</a>
{% endblock %}
